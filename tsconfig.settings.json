{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": ["dom", "es2016", "es2020.string"],
    "typeRoots": ["packages/@sanity/types/parts", "node_modules/@types"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  }
}
