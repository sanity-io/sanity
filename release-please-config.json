{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "separate-pull-requests": false,
  "draft-pull-request": true,
  "always-update": true,
  "include-component-in-tag": false,
  "packages": {
    "packages/@repo/package.bundle": {"component": "package.bundle", "release-type": "node"},
    "packages/@sanity/cli": {"component": "cli", "release-type": "node"},
    "packages/@sanity/codegen": {"component": "codegen", "release-type": "node"},
    "packages/@sanity/diff": {"component": "diff", "release-type": "node"},
    "packages/@sanity/migrate": {"component": "migrate", "release-type": "node"},
    "packages/@sanity/mutator": {"component": "mutator", "release-type": "node"},
    "packages/@sanity/schema": {"component": "schema", "release-type": "node"},
    "packages/@sanity/types": {"component": "types", "release-type": "node"},
    "packages/@sanity/util": {"component": "util", "release-type": "node"},
    "packages/@sanity/vision": {"component": "vision", "release-type": "node"},
    "packages/create-sanity": {"component": "create-sanity", "release-type": "node"},
    "packages/groq": {"component": "groq", "release-type": "node"},
    "packages/sanity": {"component": "sanity", "release-type": "node"}
  },
  "plugins": [
    {
      "type": "node-workspace",
      "updateAllPackages": true,
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "Studio packages",
      "components": [
        "package.bundle",
        "cli",
        "codegen",
        "diff",
        "migrate",
        "mutator",
        "schema",
        "types",
        "util",
        "vision",
        "create-sanity",
        "groq",
        "sanity"
      ]
    }
  ]
}
