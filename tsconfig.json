{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "es2016",
    "declaration": true,

    /* Note this must be false or else the gulp task will not emit any d.ts files for some bizarre reason */
    "emitDeclarationOnly": false,

    "declarationMap": true,
    "lib": ["dom", "es2016"],
    "moduleResolution": "node",
    "sourceMap": true,
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  }
}
