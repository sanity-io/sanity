#!/usr/bin/env node
/* eslint-disable no-var, no-console, no-process-exit, prefer-template, import/no-unassigned-import */

process.on('unhandledRejection', (error) => {
  console.error(error)
  process.exit(1)
})

if (process.env.SANITY_CLI_RUN_FROM_SOURCE === '1') {
  require('./dev.js')
} else {
  // run cli
  require('../lib/run')
}
