{
  "extends": "../../../tsconfig",
  "include": ["src"],
  "compilerOptions": {
    // todo: we need to disable noImplicitAny in a transition phase and should be removed eventually
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "./lib",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": ".*\\.css$"
        }
      }
    ]
  }
}
