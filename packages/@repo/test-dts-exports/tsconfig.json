{
  // Because this library is testing the typings it can't extend `check.json`
  // as it sets the `development` export condition which prevents us from
  // testing against the built dts files.
  // It also can't extend `build.json` as it's not meant to be used for type checking.
  // That leaves us with `base.json`, which both `build.json` and `check.json` extends.
  "extends": "@repo/tsconfig/base.json",
  "include": ["./test"],
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "rootDir": "."
  }
}
