{
  "extends": "@repo/tsconfig/build.json",
  "include": ["./test"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/__workshop__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "emitDeclarationOnly": false,
    "noEmit": true,
    "module": "Preserve",
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false
  }
}
