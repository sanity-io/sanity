{
  "$schema": "https://json.schemastore.org/tsconfig",
  "description": "Used for building with @sanity/pkg-utils, in `tsconfig.lib.json` files",
  "extends": "./base.json",
  "compilerOptions": {
    // The `${configDir}` is available since TS 5.5 and eliminates the need for every workspace to declare it
    "outDir": "${configDir}/lib",
    // The `noCheck` option disables type-checking during the `@sanity/pkg-utils` build process: https://github.com/sanity-io/pkg-utils/blob/d9c5ce667d344063b9de128464670092157c01b7/packages/%40sanity/pkg-utils/src/node/tasks/dts/buildTypes.ts#L22
    "noCheck": true
  }
}
