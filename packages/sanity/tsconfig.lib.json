{
  "extends": "@repo/tsconfig/build.json",
  "include": ["./package.json", "./src", "./typings"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/__workshop__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",
    "noImplicitAny": false,
    // For import.meta.env/import.meta.hot definition and similar
    "types": ["vite/client"]
  }
}
