{
  "extends": "./tsconfig.settings.json",
  "include": ["./package.json", "./src", "./typings"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/__workshop__",
    "./src/**/__test__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.test-d.ts",
    "./src/**/*.test-d.tsx",
    "./src/**/vitest.config.mts"
  ],
  "compilerOptions": {
    "moduleResolution": "node10", // necessary until `@microsoft/api-extractor` supports `module: "Preserve"` and `moduleResolution: "Bundler"`
    "noCheck": true
  }
}
