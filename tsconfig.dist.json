{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["dom", "es2016", "es2020.string"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true
  }
}
