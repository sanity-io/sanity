{
  "name": "sanity",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && npm run package-yarn && npm run install-husky",
    "build": "lerna run clean && gulp && npm run package",
    "clean": "lerna run clean && lerna clean",
    "publish": "npm run build && lerna publish --exact",
    "publish-canary": "npm run build && lerna publish --canary --exact",
    "package": "npm run package-yarn && npm run package-cli",
    "package-cli": "(cd packages/@sanity/cli && npm run pack)",
    "package-yarn": "(cd packages/@sanity/cli && npm run package-yarn)",
    "init": "lerna clean --yes && npm run bootstrap && npm run build",
    "deploy-test": "npm run build && cd packages/test-studio && sanity deploy",
    "deploy-movies": "npm run build && cd packages/movies-studio && sanity deploy",
    "storybook": "gulp storybook",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --quiet --fix",
    "typecheck": "lerna run typecheck",
    "start": "npm run test-studio",
    "ecommerce-studio": "gulp ecommerce-studio",
    "test-studio": "gulp test-studio",
    "example-studio": "gulp example-studio",
    "movies-studio": "gulp movies-studio",
    "blog-studio": "gulp blog-studio",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "test": "echo 'Run `npm run test-all` to run `npm test` for every package'",
    "test-all": "lerna run test --stream",
    "updated": "lerna updated",
    "watch": "gulp watch",
    "install-husky": "node node_modules/husky/bin/install",
    "commitmsg": "node scripts/validateCommitMessage.js",
    "release-notes": "node scripts/printReleaseNotesTemplate.js",
    "versions": "node scripts/normalizeDependencyVersions.js",
    "normalize-pkgfields": "node scripts/normalizePackageFields.js",
    "prettify": "lerna run clean && prettier --write \"**/*.js\""
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-flow-comments": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@rexxars/gulp-typescript": "^5.0.0-alpha.3",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-css-modules-transform": "^1.6.1",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "boxen": "^1.3.0",
    "chalk": "^2.3.0",
    "deepmerge": "^2.0.1",
    "eslint": "^4.19.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-es5": "^1.2.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-flowtype-errors": "^3.5.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "execa": "^0.10.0",
    "flow-bin": "^0.68.0",
    "glob": "^7.1.2",
    "globby": "^8.0.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "gulp-filter": "^5.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^5.0.1",
    "hard-rejection": "^1.0.0",
    "husky": "^0.14.3",
    "lerna": "^3.4.0",
    "merge-stream": "^1.0.1",
    "minimist": "^1.2.0",
    "path-exists-cli": "^1.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.13.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "stylelint": "^8.4.0",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-standard": "^18.0.0",
    "through2": "^2.0.3",
    "typescript": "^2.9.2",
    "yarn": "^1.3.2"
  }
}
