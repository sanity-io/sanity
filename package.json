{
  "name": "sanity",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn run package-yarn && yarn run install-husky",
    "build": "lerna run clean && gulp",
    "clean": "lerna run clean && lerna clean",
    "publish": "yarn run build && lerna publish",
    "publish-canary": "yarn run build && lerna publish --canary --exact",
    "package-yarn": "cd packages/@sanity/cli && yarn run package-yarn",
    "init": "lerna clean --yes && yarn run bootstrap && yarn run build",
    "start": "gulp dev",
    "storybook": "gulp storybook",
    "example": "gulp example",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "test": "echo 'Run `npm run test-all` to run `npm test` for every package'",
    "test-all": "lerna run test --stream",
    "updated": "lerna updated",
    "watch": "gulp watch",
    "install-husky": "node node_modules/husky/bin/install",
    "commitmsg": "node scripts/validateCommitMessage.js",
    "versions": "node scripts/normalizeDependencyVersions.js",
    "normalize-pkgfields": "node scripts/normalizePackageFields.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "boxen": "^1.1.0",
    "chalk": "^1.1.3",
    "eslint": "^4.9.0",
    "eslint-config-sanity": "^3.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.4.0",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-filter": "^5.0.0",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "husky": "^0.13.4",
    "lerna": "^2.1.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "semver": "^5.3.0",
    "stylelint": "^8.0.0",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-lost": "0.0.3",
    "stylelint-config-standard": "^17.0.0",
    "through2": "^2.0.3",
    "yarn": "^1.0.2"
  }
}
