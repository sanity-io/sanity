{
  "private": true,
  "isSanityMonorepo": true,
  "name": "sanity",
  "workspaces": [
    "dev/*",
    "examples/*",
    "packages/@sanity/*",
    "packages/create-sanity",
    "packages/groq",
    "packages/sanity"
  ],
  "scripts": {
    "workshop": "cd dev/workshop && yarn dev",
    "bootstrap": "lerna bootstrap && yarn build:cli && yarn package",
    "dev": "npm start",
    "rebuild": "gulp build",
    "build": "gulp clean && gulp build && yarn package",
    "build:cli": "gulp build:cli",
    "build:js": "gulp js",
    "clean": "lerna clean && gulp clean",
    "publish": "yarn build && lerna publish --exact",
    "publish-canary": "RELEASE_TAG=canary yarn publish-tag",
    "publish-current-branch": "RELEASE_TAG=`git rev-parse --abbrev-ref HEAD | sed 's/\\//\\_/g'` yarn publish-tag",
    "publish-tag": "RELEASE_TAG=\"${RELEASE_TAG:-canary}\"; yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag=$RELEASE_TAG --preid=$RELEASE_TAG --exact",
    "package": "yarn package-yarn && yarn package-cli",
    "package-cli": "yarn --cwd packages/@sanity/cli pack",
    "package-yarn": "yarn --cwd packages/@sanity/cli package-yarn",
    "init": "lerna clean --yes && yarn bootstrap && yarn build",
    "deploy-test": "yarn build && cd dev/test-studio && sanity deploy",
    "deploy-movies": "yarn build && cd examples/movies-studio && sanity deploy",
    "lint": "yarn eslint .",
    "depcheck": "lerna exec \\$LERNA_ROOT_PATH/scripts/depcheck.js --no-bail --parallel",
    "eslint": "eslint --ext=.js,.jsx,.mjs,.ts,.tsx --quiet",
    "lint:fix": "eslint . --quiet --fix",
    "start": "yarn test-studio",
    "ecommerce-studio": "cd examples/ecommerce-studio && npm start",
    "test-studio": "cd dev/test-studio && npm start",
    "clean-studio": "cd examples/clean-studio && npm start",
    "design-studio": "cd dev/design-studio && npm start",
    "perf-studio": "cd dev/perf-studio && npm start",
    "example-studio": "cd dev/example-studio && npm start",
    "movies-studio": "cd examples/movies-studio && npm start",
    "blog-studio": "cd examples/blog-studio && npm start",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "build-and-serve": "(cd dev/test-studio && yarn build && history-server -p 3333 -a dist)",
    "test": "jest && lerna run --scope groq --scope '@sanity/{client,generate-help-url,plugin-loader}' test",
    "test-e2e": "start-server-and-test build-and-serve http://localhost:3333 'yarn cypress:run'",
    "test-perf": "start-server-and-test perf-studio http://localhost:3344 'ts-node -r dotenv/config perf/suite'",
    "updated": "lerna updated",
    "watch": "gulp watch",
    "release-notes": "node scripts/printReleaseNotesTemplate.js",
    "versions": "node scripts/normalizeDependencyVersions.js",
    "normalize-pkgfields": "node scripts/normalizePackageFields.js",
    "prettify": "lerna run clean && yarn prettier --write",
    "prettier": "prettier '**/*.{ts,js,tsx,jsx}'",
    "lint-next": "yarn eslint `git diff --name-only next --diff-filter ACMRTUXB`",
    "verify-format": "lerna run clean && yarn prettier -c",
    "postinstall": "node ./scripts/validateMonorepoDependencies.js && yarn bootstrap",
    "vercel-build": "yarn build:js && (cd dev/test-studio && yarn build -y)",
    "type-check": "tsc -b --force",
    "cypress:open": "cypress open --config-file cypress/cypress.json",
    "cypress:run": "cypress run --config-file cypress/cypress.json"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.7.4",
    "@babel/runtime": "7.12.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vercel/node": "^1.8.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "boxen": "^4.1.0",
    "chalk": "^2.4.2",
    "cypress": "^6.3.0",
    "cypress-dotenv": "^1.2.2",
    "deepmerge": "^3.3.0",
    "del": "^5.1.0",
    "depcheck": "^1.4.1",
    "dotenv": "^8.2.0",
    "esbuild": "^0.12.21",
    "esbuild-register": "^3.0.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-sanity": "^5.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "execa": "^2.0.0",
    "git-repo-info": "^2.1.1",
    "glob": "^7.1.2",
    "globby": "^10.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-filter": "^6.0.0",
    "gulp-newer": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-watch": "^5.0.1",
    "hard-rejection": "^2.1.0",
    "hashids": "^2.2.8",
    "history-server": "^1.3.1",
    "husky": "^2.5.0",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.15",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.2",
    "puppeteer": "^11.0.0",
    "rimraf": "^2.7.1",
    "semver": "^6.2.3",
    "start-server-and-test": "^1.11.7",
    "stylelint": "^13.4.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.4.2"
  },
  "optionalDependencies": {
    "node-notifier": "^10.0.0"
  },
  "husky": {
    "hooks": {
      "commitmsg": "node scripts/validateCommitMessage.js"
    }
  }
}
