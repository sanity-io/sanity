{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "env": [
        "NEXT_PUBLIC_SANITY_*",
        "NEXT_PUBLIC_VERCEL_ENV",
        "SANITY_*",
        "REACT_COMPILER"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "out/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
